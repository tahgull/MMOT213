<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@android:color/darker_gray"
    >

    <EditText
        android:id="@+id/TextAdi"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:hint="Adi" />

    <EditText
        android:id="@+id/TextSoyadii"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextAdi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="7dp"
        android:hint="Soyad" />

    <EditText
        android:id="@+id/TextYas"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextSoyadii"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:hint="Yaşı" />

    <EditText
        android:id="@+id/TextMail"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextYas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="4dp"
        android:hint="Eposta" />

    <EditText
        android:id="@+id/EditTextSifre"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextMail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:hint="Şifre"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/EditTextSifreTekrar"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditTextSifre"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Tekrar Şifre"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/KontrolBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditTextSifreTekrar"
        android:layout_marginTop="20dp"
        android:text="Kontrol Et"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30dp" />


</RelativeLayout>